<Page
    x:Class="WpfStroopTestSuite.Pages.BlockView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfStroopTestSuite.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BlockView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="OnPageLoaded"
    Unloaded="OnPageUnloaded"
    mc:Ignorable="d">
    <Page.Resources>
        <Style BasedOn="{StaticResource TextBlockWhite}" TargetType="{x:Type TextBlock}" />
        <Style BasedOn="{StaticResource LabelWhite}" TargetType="{x:Type Label}" />
    </Page.Resources>

    <Grid>
        <StackPanel
            Margin="100"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Vertical">

            <TextBlock
                x:Name="TimerLabel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="{DynamicResource MaterialFontSize}"
                Text="Timer" />

            <TextBlock
                x:Name="BlockTimerLabel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="{DynamicResource MaterialFontSize}"
                Text="BlockTimer"
                Visibility="Collapsed" />
        </StackPanel>

        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                x:Name="FeedbackLabel"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="LightGray"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource TextColorSecondary}"
                Text="FEEDBACK"
                Visibility="Collapsed" />
        </Grid>

        <Grid
            x:Name="TrialContainer"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <Label
                x:Name="WordTrialLabel"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="RED"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorRed}"
                Visibility="Collapsed" />

            <!--<Label
                x:Name="RedRed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="RED"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorRed}"
                Visibility="Collapsed" />
            <Label
                x:Name="RedGreen"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="GREEN"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorRed}"
                Visibility="Collapsed" />
            <Label
                x:Name="RedBlue"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="BLUE"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorRed}"
                Visibility="Collapsed" />
            <Label
                x:Name="RedYellow"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="YELLOW"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorRed}"
                Visibility="Collapsed" />

            <Label
                x:Name="GreenRed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="RED"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorGreen}"
                Visibility="Collapsed" />
            <Label
                x:Name="GreenGreen"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="GREEN"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorGreen}"
                Visibility="Collapsed" />
            <Label
                x:Name="GreenBlue"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="BLUE"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorGreen}"
                Visibility="Collapsed" />
            <Label
                x:Name="GreenYellow"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="YELLOW"
                FontSize="{DynamicResource MaterialFocusFontSize}"
                FontWeight="Bold"
                Foreground="{StaticResource ColorGreen}"
                Visibility="Collapsed" />

            <Label
